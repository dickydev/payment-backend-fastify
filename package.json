    "fastify": "^4.28.1",
    "fastify-oas": "^3.0.8",
    "fastify-swagger": "^5.2.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^22.4.1",
    "nodemon": "^3.1.4",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
